{
  "name": "ctstyle",
  "version": "0.3.0",
  "description": "Uma customização do framework CSS Bulma",
  "author": "CTVoicer <falecom@ctvoicer.com.br>",
  "main": "sass/ctstyle.sass",
  "scripts": {
    "css-build": "node-sass --output-style compact sass/ctstyle.sass css/ctstyle.css --importer=node_modules/node-sass-tilde-importer",
    "css-watch": "npm run css-build -- --watch",
    "start": "npm run css-watch",
    "test": "echo \"Error: no test specified\" && exit 1",
    "release": "standard-version"
  },
  "dependencies": {
    "bulma": "^0.7.4"
  },
  "devDependencies": {
    "node-sass": "^4.11.0",
    "node-sass-tilde-importer": "^1.0.2",
    "standard-version": "^4.4.0"
  }
}
